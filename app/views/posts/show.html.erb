<% if user_signed_in? %>
  <h3>Ingresar un nuevo comentario:</h3>

  <%= form_with model: [@post, Comment.new] do |f| %>
    <div class="form-group">
      <%= f.label :comentario %>
      <%= f.text_field :content, class: "form-control", placeholder: "Ingrese su comentario" %>
    </div>
    <div class="form-group">
      <%= f.label :tengo %>
      <%= f.fields_for :comment_items do |ci_form| %>
        <%= ci_form.collection_select :product_id, current_user.products, :id, :name %>
      <% end %>
    </div>
    <%= f.submit "Enviar comentario", class: "btn btn-primary" %>
  <% end %>
  <hr>
<% end %>
